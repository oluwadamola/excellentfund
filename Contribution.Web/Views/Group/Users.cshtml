<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="#">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a ui-sref="groups.list">Groups</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a ui-sref="groups.details({id: model.Group.GroupId})">{{model.Group.GroupName}}</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Users</span>
        </li>
    </ul>

    <ul class="page-breadcrumb pull-right">
        <li>
            System Administrator
        </li>
    </ul>
</div>

<div>
    <div class="col-xs-6">
        <h1 class="page-title">
            <i class="fa fa-pencil font-purple-studio"></i> Users
        </h1>
    </div>
    <div class="col-xs-6">
        <div class="page-actions">
            <button class="btn purple pull-right"
                ng-click="model.addUserGroup()">
                <i class="fa fa-plus"></i> Add User To Group
            </button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <table class="table" ng-show="model.Users.length">
                <thead>
                    <tr>
                        <th>UserId</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="overflow" ng-repeat="user in model.Users">
                        <td>{{user.UserId}}</td>
                        <td>{{user.FirstName || "N/A"}}</td>
                        <td>{{user.LastName || "N/A"}}</td>
                        <td>{{user.Email || "N/A"}}</td>
                        <td class="text-right">
                            <a ui-sref="groups.user.details({ gid: model.Group.GroupId, id: user.UserId })" class="btn btn-default btn-xs"><i class="fa fa-search"></i>View</a>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="empty" ng-hide="model.Users.length">
                There are no Users Available in this group yet
            </div>
        </div>
    </div>
</div>


<script type="text/ng-template" id="usergroup.html">
