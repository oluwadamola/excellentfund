    <div class="row">
        <div class="col-xs-6 col-sm-4" ng-repeat="role in model.Roles">
            <div class="pane pane-hover" ng-click="model.Select(role.Role.Url)">
                <i class="fa fa-4x" ng-class="model.GetIcon(role.Role)"></i>
                <h4>{{model.GetTitle(role.Role)}}</h4>
                @*<p>{{role.UserRole.Organisation.Name}}</p>*@
            </div>
        </div>
    </div>

    <hr />
    <div class="row">
        <div class="col-md-12 text-right">
            <a href="#!/signout" class="btn btn-danger"><i class="fa fa-sign-out"></i>Sign Out</a>
        </div>
    </div>
</div>