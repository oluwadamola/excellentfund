<div class="row widget-row">
    <div class="col-md-3">
        <!-- BEGIN WIDGET THUMB -->
        <a ui-seref="groups.list">
            <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered" ui-sref="groups.list">
                <h4 class="widget-thumb-heading">Current Groups</h4>
                <div class="widget-thumb-wrap">
                    <i class="widget-thumb-icon bg-green icon-bulb"></i>
                    <div class="widget-thumb-body">
                        <span class="widget-thumb-subtitle"></span>
                        <span class="widget-thumb-body-stat" data-counter="counterup"  data-value="{{model.Groups.length}}">{{model.Groups.length}}</span>
                    </div>
                </div>
            </a>
        </div>
        <!-- END WIDGET THUMB -->
    </div>
    <div class="col-md-3" ui-sref="users.list">
        <!-- BEGIN WIDGET THUMB -->
        <a>
            <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
                <h4 class="widget-thumb-heading">Current Users</h4>
                <div class="widget-thumb-wrap">
                    <i class="widget-thumb-icon bg-red fa fa-users"></i>
                    <div class="widget-thumb-body">
                        <span class="widget-thumb-subtitle"></span>
                        <span class="widget-thumb-body-stat" data-counter="counterup"  data-value="{{model.Users.length}}">{{model.Users.length}}</span>
                    </div>
                </div>
            </div>
        </a>
        <!-- END WIDGET THUMB -->
    </div>
    <div class="col-md-3">
        <!-- BEGIN WIDGET THUMB -->
        <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
            <h4 class="widget-thumb-heading">Total Contribution</h4>
            <div class="widget-thumb-wrap">
                <i class="widget-thumb-icon bg-purple fa fa-money"></i>
                <div class="widget-thumb-body">
                    <span class="widget-thumb-subtitle">February</span>
                    <span class="widget-thumb-body-stat" data-counter="counterup" data-value="815">815</span>
                </div>
            </div>
        </div>
        <!-- END WIDGET THUMB -->
    </div>
    <div class="col-md-3">
        <!-- BEGIN WIDGET THUMB -->
        <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
            <h4 class="widget-thumb-heading">OutStanding(s)</h4>
            <div class="widget-thumb-wrap">
                <i class="widget-thumb-icon bg-blue fa fa-users"></i>
                <div class="widget-thumb-body">
                    <span class="widget-thumb-subtitle">Users</span>
                    <span class="widget-thumb-body-stat" data-counter="counterup" data-value="5">5</span>
                </div>
            </div>
        </div>
        <!-- END WIDGET THUMB -->
    </div>
</div>



<div class="pricing-content-1">
    <div class="row" ng-show="model.Groups.length">
        <div class="col-md-3" ng-repeat="group in model.Groups">
            <div class="price-column-container border-active">
                <div class="price-table-head" ng-class="model.GetColor($index)[1]">
                    <h2 class="no-margin">{{group.GroupName}}</h2>
                </div>
                <div class="arrow-down" ng-class="model.GetColor($index)[2]"></div>
                <div class="price-table-pricing">
                    <h3>
                        <sup class="price-sign">&#8358;</sup>10,000
                    </h3>
                    <p>per month</p>
                </div>
                <div class="price-table-content">

                    <div style="padding:15px 0px">

                        <div class="row mobile-padding">
                            <div class="col-xs-3 text-right mobile-padding">
                                <i class="icon-user"></i>
                            </div>
                            <div class="col-xs-9 text-left mobile-padding">{{group.Users.length}} Users</div>
                        </div>

                        <div class="row mobile-padding">
                            <div class="col-xs-3 text-right mobile-padding">
                                <i class="icon-drawer"></i>
                            </div>
                            <div class="col-xs-9 text-left mobile-padding">OutStanding 20,000</div>
                        </div>

                    </div>
                </div>
                <div class="arrow-down arrow-grey"></div>
                <div class="price-table-footer">
                    <button type="button" class="btn sbold uppercase price-button" ui-sref="groups.details({id: group.GroupId})" ng-class="model.GetColor($index)[0]">View</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row" ng-hide="model.Groups.length">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <p class="empty">There are no groups in the System. Kindly Contact the Administrator</p>
            </div>
        </div>
    </div>
</div>